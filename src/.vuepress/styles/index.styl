.home .hero img
  max-width 450px!important

html {
  background-color: #131219;
}

body {
  overflow-x: hidden;
  font-family: 'Roboto Slab', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  background-color: #131219;
  color: #fff;
}

.navbar {
  background-color: #000
  border-bottom: 1px solid #000;
}

.navbar .links {
  background-color: transparent !important;
  color: #fff;
}

.sidebar {
  background: #000;
  border: none;
}

.home .feature {
  flex-grow: unset;
  flex-basis: auto;
  max-width: unset;
  margin: 0 auto;
}

.hero img {
  width: 500px;
  height: 500px;
}

p {
  line-height: 1.75;
}

a {
  color: #8625d2;
}

a:hover {
  color: #fec503;
}

.text-primary {
  color: #8625d2 !important;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-weight: 700;
  font-family: 'Montserrat', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

:root {
  --pink: #ff006a;
  --blue: #44dfff;
  --green: #aaed36;
  --yellow: #f5af19;
  --gray: #6e7d9a;
  --darkblue: #0e141a;
  --gradient: linear-gradient(#9b30f9, #84e);
}

pre {
  background-color: var(--darkblue);
  border-radius: 5px;
  color: var(--blue);
}

.token.keyword {
  color: var(--pink);
}

.token.function {
  color: var(--green);
}

.token.punctuation {
  color: #fff;
}

.token.string {
  color: var(--yellow);
}

.token.number {
  color: #fff;
  margin: 0;
  padding: 0;
  border: 0;
  background: transparent;
}

.token.comment {
  color: var(--gray);
}

.token.tag {
  color: var(--pink);
  background: transparent;
}

.token.attr-name {
  color: #fff;
}

.token.token.attr-value {
  color: var(--green);
}

code {
  background: none;
}

tr:nth-child(2n) {
  background-color: transparent !important;
}

blockquote {
  background-color: #2c303a;
  border-left: 0.2rem solid #8625d2;
}

.home .feature h2 {
  text-align: center;
}
